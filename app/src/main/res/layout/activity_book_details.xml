<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".BookDetails">

<!--    upper_part-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                ></ImageView>

        >

        <TextView
            android:id="@+id/book_details"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:text="Book Details"
            android:textSize="22dp"
            android:padding="20dp"
            android:layout_toRightOf="@+id/arrow"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:fontFamily="@font/gilroylight"
            android:textColor="@color/black"
        ></TextView>

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/book_details"
            android:padding="20dp"
            android:src="@drawable/ic_baseline_bookmark_border_24"></ImageView>

    </RelativeLayout>

<!--    picture-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"

        >

        <ImageView
            android:id="@+id/noli"
            android:layout_width="210dp"
            android:layout_height="180dp"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/noli_me_tangere"

            ></ImageView>

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:text="Noli Me Tangere"
            android:textColor="@color/black"
            android:fontFamily="@font/gilroylight"
            android:textSize="20dp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white"
        >

    <RelativeLayout
        android:layout_width="311dp"
        android:layout_height="52dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="20dp"
        android:background="@color/outline"


        >

        <TextView
            android:id="@+id/author"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:text="Author \nJose Rizal"
            android:textAlignment="center"
            android:textSize="17dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:fontFamily="@font/gilroyregular"
            ></TextView

        >

        <TextView
            android:id="@+id/rizal"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/author"
            android:text="Read\n 2.8k"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/black"
            android:fontFamily="@font/gilroyregular"
            android:textSize="17dp"></TextView>


        >

        <TextView
            android:id="@+id/pages"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/rizal"
            android:text="Pages \n 416"
            android:textAlignment="center"
            android:background="@color/white"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:fontFamily="@font/gilroyregular"
            ></TextView>

        >

        <TextView
            android:id="@+id/ratings"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/pages"
            android:text="Raitings \n4.8"
            android:textAlignment="center"
            android:background="@color/white"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:fontFamily="@font/gilroyregular"
            ></TextView>
    </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="60dp"

        >

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:textColor="@color/purple"
        android:fontFamily="@font/gilroyblack"
        ></TextView>

    >
    <View
        android:id="@+id/purple"
        android:layout_width="105dp"
        android:layout_height="2dp"
        android:background="@color/purple"
        android:layout_below="@+id/description"
        android:layout_marginLeft="20dp"
        ></View>

        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/outline"
            android:layout_toRightOf="@+id/purple"
            android:layout_marginVertical="42.3dp"
            ></View>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/gilroymedium"
        android:layout_marginLeft="20dp"
        android:text="Noli Me Tangere (Latin for Touch me not); accute accent is\n
added on the final word in accordance with Spanish\n
orthography) is an 1887 novel by Filipino writer and activist\n
Jose Rizal published during the Spanish colonial period of\n
The Philippines.\n \n
Rizal finished the novel in February 1887. At the first,\n
according to one of Rizal's biographers, Rizal feared the\n
novel might to be printed."

        ></TextView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

                >
                <Button
                    android:id="@+id/shelves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD TO SHELVES"
                    android:textColor="@color/black"
                    android:background="@drawable/button_shelves"
                    android:layout_marginLeft="30dp"
                    android:layout_marginVertical="40dp"
                    ></Button>

                >
                <Button
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:text="BORROW"
                    android:textColor="@color/black"
                    android:background="@drawable/button_borrow"
                    android:layout_toRightOf="@+id/shelves"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="30dp"

                ></Button>

        </LinearLayout>

</LinearLayout>
