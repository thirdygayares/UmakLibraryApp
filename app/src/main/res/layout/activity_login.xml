<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Login" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/open_book"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/library_logo">
        </ImageView>


        <TextView
            android:id="@+id/UMAK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/open_book"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/arialmedium"
            android:text="HERONS"
            android:textColor="@color/black"
            android:textSize="30sp">

        </TextView>

        <TextView
            android:id="@+id/LIBRARY_APP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UMAK"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/arialmedium"
            android:text="LIBRARY"
            android:textColor="@color/black"
            android:textSize="30sp">

        </TextView>
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        app:cardElevation="0dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="-30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingTop="40dp">


            <TextView
                android:layout_margin="10dp"
                android:id="@+id/errorLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FF0259"
                android:fontFamily="@font/gilroyblackitalic"
                android:paddingHorizontal="15dp"
                android:text="Error Login Text"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone">

            </TextView>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="2dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        android:hint="Email"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_baseline_email_24"
                        app:endIconTint="@color/blue"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputEmail"
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:maxLines="1"
                            android:layout_height="wrap_content"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:id="@+id/line"
                        android:layout_width="320dp"
                        android:layout_height="1dp"
                        android:layout_below="@+id/profileIcom"
                        android:background="#E91E63"
                        android:backgroundTint="@color/white" />


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        android:hint="Enter password"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/blue"

                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputPassword"
                            android:inputType="textPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


            <TextView
                android:id="@+id/forgotpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/gilroymedium"
                android:text="Forgot Password?"></TextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/login"
                style="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="80dp"
                android:layout_marginVertical="3dp"
                android:text="Login"
                android:paddingVertical="15dp"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/blue"
                app:cornerRadius="4dp"
                app:rippleColor="@color/blue"
                app:strokeColor="@color/blue"
                app:strokeWidth="1dp"></com.google.android.material.button.MaterialButton>

            <TextView
                android:visibility="invisible"
                android:id="@+id/newAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/blue"
                android:fontFamily="@font/gilroymedium"
                android:text="New Account ?"></TextView>



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:outlineAmbientShadowColor="@color/blue"
        android:outlineSpotShadowColor="@color/blue"
        />


</RelativeLayout>



