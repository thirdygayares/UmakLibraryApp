<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".NewAccount" >



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/open_book"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:src="@drawable/library_logo"
            android:layout_marginHorizontal="82dp"
            android:layout_marginTop="50dp">


        </ImageView>


        <TextView
            android:id="@+id/UMAK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/open_book"
            android:layout_centerHorizontal="true"
            android:text="UMAK"
            android:textColor="@color/black"
            android:textSize="30sp">

        </TextView>

        <TextView
            android:id="@+id/LIBRARY_APP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UMAK"
            android:layout_centerHorizontal="true"
            android:text="LIBRARY APP"
            android:textColor="@color/black"
            android:textSize="30sp">

        </TextView>
    </RelativeLayout>

<!--    email Verification-->
    <androidx.cardview.widget.CardView
        android:id="@+id/CheckEmail"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="-30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingTop="40dp">


            <TextView
                android:id="@+id/errorEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FF0259"
                android:fontFamily="@font/gilroyblackitalic"
                android:paddingHorizontal="15dp"
                android:text="Email not Found"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:visibility="gone"
                >

            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:outlineSpotShadowColor="@color/blue"
                android:outlineAmbientShadowColor="@color/blue"
                android:backgroundTint="@color/white">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp">

                    <ImageView
                        android:id="@+id/profileIcom"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="15dp"
                        android:src="@drawable/ic_user_email"
                        app:tint="@color/blue">

                    </ImageView>

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toRightOf="@+id/profileIcom"
                        android:background="@color/white"
                        android:fontFamily="@font/gilroymedium"
                        android:hint="Check Email"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textSize="15dp">

                    </EditText>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>



            <Button
                android:id="@+id/CheckEmailbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/gilroyextrabold"
                android:padding="14dp"
                android:text="Submit"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:textSize="18dp"></Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

<!--    Creating a Password-->
    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/CreatePassword"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        app:cardCornerRadius="30dp"
        android:layout_marginBottom="-30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingTop="40dp">


            <TextView
                android:id="@+id/errorLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                android:background="#FF0259"
                android:fontFamily="@font/gilroyblackitalic"
                android:paddingHorizontal="15dp"
                android:text="Error Login Text"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="invisible">

            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:outlineSpotShadowColor="@color/blue"
                android:outlineAmbientShadowColor="@color/blue"
                android:backgroundTint="@color/white">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp">

                    <ImageView
                        android:id="@+id/emailIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="15dp"
                        android:src="@drawable/ic_password"
                        app:tint="@color/blue">

                    </ImageView>

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toRightOf="@+id/emailIcon"
                        android:background="@color/white"
                        android:fontFamily="@font/gilroymedium"
                        android:hint="Create Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textSize="15dp">

                    </EditText>

                    <View
                        android:id="@+id/line"
                        android:layout_width="320dp"
                        android:layout_height="1dp"
                        android:layout_below="@+id/emailIcon"
                        android:background="#E91E63"
                        android:backgroundTint="@color/white" />

                    <ImageView
                        android:id="@+id/lockIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/line"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="15dp"
                        android:src="@drawable/ic_password"
                        app:tint="@color/blue"></ImageView>

                    <EditText
                        android:id="@+id/confirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toRightOf="@+id/lockIcon"
                        android:background="@color/white"
                        android:fontFamily="@font/gilroymedium"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textSize="15dp">

                    </EditText>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>




            <Button
                android:id="@+id/SubmitAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/gilroyextrabold"
                android:padding="14dp"
                android:text="Submit"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:textSize="18dp"></Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>



